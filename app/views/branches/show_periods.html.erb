<% provide(:title, 'シフト希望') %>
<% provide(:subtitle, "期間：#{@period.start_to_end}") %>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>提出状況</th>
      <% @period.days.each do |date| %>
        <th><%= link_to date.strftime("%m/%d"), date_branch_path(@branch, date.to_s) %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @branch.employees.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.submit_shift?(@period) ? "済" : "未" %></td>
        <% @period.days.each do |date| %>
          <td><%= @shift_requests[user.full_name][date.to_s].present? ? @shift_requests[user.full_name][date.to_s] : "" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>