<% provide(:title, 'シフト提出状況') %>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th></th>
        <% @periods.each do |period| %>
          <th><%= link_to period.start_to_end, periods_branch_path(@branch, period.id) %></th>
        <% end %>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.full_name %></td>
        <% @periods.each do |period| %>
          <td class=<%= employee.submit_shift?(period) ? 'table-success' : 'table-warning' %>>
            <%= employee.submit_shift?(period) ? "提出済" : "未提出" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>