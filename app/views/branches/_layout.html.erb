<div class="container-fluid">
  <div class="row">
    <aside class="col-lg-2 order-2 order-lg-1">
      <%= render "branches/sidebar" %>
    </aside>
    
    <main class="col-lg-10 order-1 order-lg-2">
      <h1><%= @branch.company_name %></h1>
      <% if yield(:title).present? %>
        <h2><%= yield(:title) %></h2>
      <% end %>
      <% if yield(:subtitle).present? %>
        <h3><%= yield(:subtitle) %></h3>
      <% end %>
      <%= yield %>
    </main>
  </div>
</div>