<h2>ユーザー登録</h2>

<%= form_with(model: resource, url: user_registration_path, scope: :user, local: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <%= render "shared/new_user_registration_form", form: f %>
  
  <% if !!params[:token] %>
    <%= hidden_field_tag :token, params[:token] %>
  <% end %>
  
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
