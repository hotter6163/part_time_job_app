<div class="field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, autofocus: true, autocomplete: "family-name" %>
</div>

<div class="field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, autocomplete: "given-name" %>
</div>

<div class="field">
  <%= form.label :email %>
  <%= form.email_field :email, autocomplete: "email" %>
</div>

<div class="field">
  <%= form.label :password %>
  <% if @minimum_password_length %>
  <em>(最低<%= @minimum_password_length %>文字入力してください)</em>
  <% end %>
  <%= form.password_field :password, autocomplete: "new-password" %>
</div>

<div class="field">
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
</div>